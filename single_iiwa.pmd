group "2.1.iiwa-drivers" {
    cmd "0.kuka-driver" {
        exec = "kuka_driver --fri_port 30200";
        host = "localhost";
    }
}

group "2.3.iiwa-controllers" {
    cmd "0.iiwa_controller" {
        exec = "$DRAKE_BIN_DIR/drake/examples/kuka_iiwa_arm/iiwa_controller";
        host = "localhost";
    }
}

group "5.iiwa-sim" {
    cmd "1.yellow-posts-sim" {
        exec = "$DRAKE_BIN_DIR/drake/examples/kuka_iiwa_arm/dev/monolithic_pick_and_place/lcm_pick_and_place_simulator --configuration_file \"drake/examples/kuka_iiwa_arm/dev/monolithic_pick_and_place/configuration/yellow_posts.pick_and_place_configuration\" --dt 1e-3";
        host = "localhost";
    }
    cmd "0.table-sim" {
        exec = "$DRAKE_BIN_DIR/drake/examples/kuka_iiwa_arm/dev/monolithic_pick_and_place/lcm_pick_and_place_simulator --configuration_file \"drake/examples/kuka_iiwa_arm/dev/monolithic_pick_and_place/configuration/single_iiwa.pick_and_place_configuration\"";
        host = "localhost";
    }
}

group "1.vision-drivers" {
    cmd "1.optitrack-driver" {
        exec = "python $SPARTAN_BUILD_DIR/externals/optitrack-driver/src/optitrack_client.py";
        host = "localhost";
    }
    cmd "0.openni-driver" {
        exec = "openni2-camera-lcm";
        host = "localhost";
    }
}

group "2.4.state-translators" {
    cmd "0.state-translator-left" {
        exec = "directorPython $DRAKE_DIR/drake/examples/kuka_iiwa_arm/kuka_iiwa_state_translator.py --director_config $DRAKE_DIR/drake/examples/kuka_iiwa_arm/director_config.json";
        host = "localhost";
    }
}

group "4.pick-and-place" {
    cmd "1.pick-and-place-yellow-posts" {
        exec = "$DRAKE_BIN_DIR/drake/examples/kuka_iiwa_arm/dev/monolithic_pick_and_place/lcm_pick_and_place_demo --nouse_channel_suffix --spdlog_level debug --configuration_file \"drake/examples/kuka_iiwa_arm/dev/monolithic_pick_and_place/configuration/yellow_posts.pick_and_place_configuration\"";
        host = "localhost";
    }
    cmd "0.pick-and-place-tables" {
        exec = "$DRAKE_BIN_DIR/drake/examples/kuka_iiwa_arm/dev/monolithic_pick_and_place/lcm_pick_and_place_demo --nouse_channel_suffix --spdlog_level debug --configuration_file \"drake/examples/kuka_iiwa_arm/dev/monolithic_pick_and_place/configuration/single_iiwa.pick_and_place_configuration\"";
        host = "localhost";
    }
}

group "3.schunk-driver" {
    cmd "0.schunk-driver" {
        exec = "$SPARTAN_BUILD_DIR/externals/drake-schunk-driver/bazel-bin/src/schunk_driver --gripper_addr 192.168.1.20 --gripper_port 1500 --local_port 1501";
        host = "localhost";
    }
}
cmd "7.lcm-spy" {
    exec = "$DRAKE_BIN_DIR/drake/lcmtypes/drake-lcm-spy";
    host = "localhost";
}

script "simulate-tables" {
    start cmd "0.table-sim";
    start cmd "0.iiwa_controller";
    start cmd "0.pick-and-place-tables";
}

script "simulate-yellow-posts" {
    start cmd "1.yellow-posts-sim";
    start cmd "0.iiwa_controller";
    start cmd "1.pick-and-place-yellow-posts";
}

script "start-all-drivers" {
    run_script "start-vision-drivers";
    run_script "start-drivers";
}

script "start-drivers" {
    stop cmd "0.iiwa_controller" wait "stopped";
    start cmd "0.kuka-driver";
    start cmd "0.iiwa_controller";
    start cmd "0.state-translator";
    start cmd "0.schunk-driver";
}

script "start-vision-drivers" {
    start group "1.vision-drivers";
}
